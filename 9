
#include<stdio.h>
#include<stdlib.h>
#include<time.h>
void swap(int* xp,int* vp)
{
int temp=*xp;
*xp=*vp;
*vp=temp;
}
void selectsort(int arr[],int n)
{
int i,j,min;
for(i=0;i<n-1;i++)
{
min=i;
for(j=i+1;j<n;j++)
{
if(arr[j]<arr[min])
{
min=j;
}
}
swap(&arr[min],&arr[i]);
}
}
void genrandm(int arr[],int n)
{
int i;
for(i=0;i<n;i++)
{
arr[i]=rand()%n;
}
}
int main()
{
int n;
double cpu_time_used,tottime=0
;
for(n=5000;n<=100000;n+=5000)
{
int* arr=(int*)malloc(n*sizeof(int));
genrandm(arr,n);
clock_t start,end;
start=clock();
selectsort(arr,n);
end=clock();
cpu_time_used=((double)(end-start))/CLOCKS_PER_SEC;
printf("time taken to sort %d elements:%f\n",n,cpu_time_used);
tottime= tottime+cpu_time_used;
free(arr);
}
//printf("total execution time =%f sec",tottime);//
//use this above line if you are running this line in vs code,else if you are running this 
code in codeblocks,it doesnâ€™t required// .
return 0;
}
